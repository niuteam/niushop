<block wx:if="{{store}}"><view class="store-info"><view class="store-info-top"><view class="info-image"><block wx:if="{{store.store_image}}"><image src="{{$root.g0}}" mode="aspectFit"></image></block><block wx:else><image src="{{$root.g1.default_goods_img}}"></image></block></view><view class="info-desc"><view class="store-name"><text class="title">{{store.store_name}}</text><block wx:if="{{store.distance}}"><text class="color-base-text far">{{"距离"+store.distance+"km"}}</text></block></view><view class="store-sign"><text class="ns-gradient-promotionpages-pintuan-payment color-base-text" data-theme="{{themeStyle}}">营业中</text><text class="ns-gradient-promotionpages-pintuan-payment color-base-text" data-theme="{{themeStyle}}">门店自提</text></view></view></view><view class="store-info-bottom"><block wx:if="{{store.open_date}}"><view class="store-time store-item"><view class="store-icon iconfont iconshijian"></view><text class="time-con">{{"营业时间："+store.open_date}}</text></view></block><block wx:if="{{store.telphone}}"><view class="store-phone store-item"><view class="phone-box"><view class="store-icon iconfont iconshouji"></view><view class="phone">{{"联系电话："+store.telphone}}</view></view><view data-event-opts="{{[['tap',[['phoneCall',['$event']]]]]}}" class="takePhone iconfont icondianhua1 color-base-text" bindtap="__e"></view></view></block><block wx:if="{{store.full_address||store.address}}"><view data-event-opts="{{[['tap',[['mapRoute']]]]}}" class="store-address store-item" bindtap="__e"><view class="address-icon"><view class="store-icon iconfont iconlocation"></view></view><view class="address">{{store.full_address+store.address}}</view></view></block></view></view></block>